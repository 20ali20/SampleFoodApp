<androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/restaurant_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/restaurant_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="alimojarrad.chownowtest.modules.common.views.FixAppBarLayoutBehavior">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <!-- 57dp is 56.9dp. This is to account for the filter height so they dont overlap-->
            <ImageView
                    android:id="@+id/restaurant_map_frame"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="300dp"
                    android:clickable="true"
                    android:src="@drawable/v_store"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax">





            </ImageView>

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentInsetLeft="0dp"
                    android:contentInsetStart="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    android:contentInsetRight="0dp"
                    android:contentInsetEnd="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetEnd="0dp"
                    android:background="@color/white"
                    app:layout_collapseMode="pin">

                <TextView
                        android:id="@+id/restaurant_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        style="@style/title"
                        tools:text="Restaurant name"
                        android:textAlignment="center"
                        />


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/restaurant_swiprefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/restaurant_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                app:layout_behavior="com.sidecarhealth.modules.common.customViews.FixAppBarLayoutBehavior"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>





