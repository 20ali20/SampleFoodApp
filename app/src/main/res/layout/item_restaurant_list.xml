<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <TextView
            android:id="@+id/irl_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/list_tite"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="H-Cafe"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
            android:id="@+id/irl_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            style="@style/list_subtitle"
            app:layout_constraintTop_toBottomOf="@id/irl_name"
            tools:text="818-385-5020"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/irl_address"
            style="@style/list_subtitle"
            app:layout_constraintTop_toBottomOf="@+id/irl_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            tools:text="the address"
            />
</androidx.constraintlayout.widget.ConstraintLayout>